/* components/cuponCard/cuponCard.wxss */

.cuppon-card {
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 8rpx 20rpx;
}

.cuppon-card-head {
  font-size: 24rpx;
  color: #655e5e;
  border-bottom: 1px solid #eee;
  padding-bottom: 8rpx;
}

.cuppon-card-main {
  display: flex;
}

.cuppon-image-wrap image{
  max-width: 200rpx;
  max-height: 200rpx;
  vertical-align: middle;
}

.cuppon-content {
  flex:1;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.cuppon-content .title {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.cuppon-content .amount {
  display: flex;
  margin-bottom: 10rpx;
}

.cuppon-content .amount .value{
  font-weight: bold;
  color: red;
}

.cuppon-content .amount .rule {
  font-size: 24rpx;
  align-self: flex-end;
  color: #655e5e;
  margin-left: 10rpx;
}

.cuppon-content .des {
 border: 1px solid #07c160;
 border-radius: 24rpx;
 color: #07c160;
 font-size: 24rpx;
 width: 120rpx;
 text-align: center;
}

.cuppon-button button{
 width: 100rpx;
 height: 50rpx;
 line-height: 50rpx;
 padding: 0;
 font-size: 24rpx;
 color: white;
 background-color: #07c160;
 margin-top: 18rpx;
}

.cuppon-button .cupon-count {
  font-size: 24rpx;
  color: #655e5e;
}